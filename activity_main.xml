<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"

        android:hint="Enter UserName Here"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Score Here"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/username_txt"
        android:layout_alignStart="@+id/username_txt"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/date"
        android:layout_below="@+id/username_txt"
        android:layout_alignLeft="@+id/username_txt"
        android:layout_alignStart="@+id/username_txt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Database"
        android:id="@+id/viewDatabase_btn"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/submit_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_btn"
        android:layout_below="@+id/score_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"/>


</RelativeLayout>